
# make one
record(waveform, "$(PFX)$(UUT):TB") {
    field(DTYP, "asynFloat64ArrayIn")
    field(INP,  "@asyn($(PFX)$(UUT),0,$(TIMEOUT))TIMEBASE")
    field(FTVL, "DOUBLE")
    field(NELM, "$(NPOINTS)")
    field(LOPR, "0")
    field(HOPR, "10")
    field(EGU,  "s")
    field(SCAN, "I/O Intr")
}

# make nchan

record(waveform, "$(PFX)$(UUT):CH:$(CH)") {
    field(DTYP, "asynFloat64ArrayIn")
    field(INP,  "@asyn($(PFX)$(UUT),$(IX),$(TIMEOUT))CHANNEL")
    field(FTVL, "DOUBLE")
    field(NELM, "$(NPOINTS)")
    field(LOPR, "-10")
    field(HOPR, "10")
    field(EGU,  "V")
    field(SCAN, "I/O Intr")
}

