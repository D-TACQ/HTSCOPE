# common records for htscope.
# nb: $HOST macro INCLUDES ':'

record(ao, "$(HOST):SHOT_TIME") {
	field(DTYP, "Soft Channel")
	field(DRVL, "1")
	field(DRVH, "20")
	field(VAL,  "10")
	field(PINI, "YES")
	field(EGU,  "s")
	field(DESC, "specify shot duration")
}

record(stringout, "$(HOST):UUT1"){
	field(DTYP, "Soft Channel")
	field(VAL,  "$(UUT1)")
	field(PINI, "YES")
	field(DESC, "UUT 1 hostname")
}
